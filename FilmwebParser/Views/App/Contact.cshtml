@model FilmwebParser.ViewModels.ContactViewModel
@{
    ViewBag.Title = "Kontakt";
}
@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h2>Kontakt</h2>
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            @if (ViewBag.UserMessage != null)
            {
                <div class="text-info">@ViewBag.UserMessage</div>
            }
            <div class="form-group">
                <label asp-for="Name">Nazwa użytkownika</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-muted"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email">Adres e-mail</label>
                <input type="email" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-muted"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject">Temat wiadomości</label>
                <input asp-for="Subject" class="form-control" />
                <span asp-validation-for="Subject" class="text-muted"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message">Treść wiadomości</label>
                <textarea cols="40" rows="4" asp-for="Message" class="form-control"></textarea>
                <span asp-validation-for="Message" class="text-muted"></span>
            </div>
            <div class="form-group">
                <a asp-controller="App" asp-action="Index" class="btn btn-default">Anuluj</a>
                <input type="submit" value="Wyślij" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
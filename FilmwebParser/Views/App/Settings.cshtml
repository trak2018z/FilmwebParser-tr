@model FilmwebParser.ViewModels.SettingsViewModel
@{
    ViewBag.Title = "Ustawienia";
}
@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h2>Ustawienia</h2>
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            @if (ViewBag.UserMessage != null)
            {
                <div class="text-info">@ViewBag.UserMessage</div>
            }
            <div class="form-group">
                <label asp-for="Avatar">Adres URL nowego avatara:</label>
                <input asp-for="Avatar" class="form-control" />
                <span asp-validation-for="Avatar" class="text-muted"></span>
            </div>
            <div class="form-group">
                <a asp-controller="App" asp-action="Index" class="btn btn-default">Anuluj</a>
                <input type="submit" value="Zmień" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
